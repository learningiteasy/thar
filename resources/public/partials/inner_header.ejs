<header id="site-header" class="header">
    <div id="header-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg desktop_menu">
                        <a class="navbar-brand logo" href="/">
                            <img id="logo-img" class="img-center" src="/uploads/<%= Appearance.logo %>" alt="" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav navbar-nav ml-auto">
                                <% publicMenu.forEach(function(menu){  %>
                                    

                                    <li class="nav-item <% if(menu.sublime.length > 0){ %> dropdown <% } %>">
                                        <a class="nav-link <% if(menu.sublime.length > 0){ %> dropdown-toggle <% } %>" href="<%= menu.url %>"><%= menu.name %></a>

                                        <% if(menu.sublime.length > 0){ %>
                                        <ul class="dropdown-menu">
                                            <% menu.sublime.forEach(function(submenu){  %>
                                            <li><a href="<%= submenu.url %>"><%= submenu.name %></a></li>
                                            <% }) %>
                                        </ul>
                                        <% } %>
                                    </li>

                                    
                                <% }) %>
                            </ul>
                        </div>
                    </nav>

                    <nav class="navbar navbar-expand-lg mobile_menu">
                        <a class="navbar-brand logo" href="/">
                            <img id="logo-img" class="img-center" src="/uploads/<%= Appearance.logo %>" alt="" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav navbar-nav ml-auto">
                                <% publicMenu.forEach(function(menu){  %>
                                    

                                    <li class="nav-item <% if(menu.sublime.length > 0){ %> dropdown <% } %>">
                                        <a class="nav-link <% if(menu.sublime.length > 0){ %> dropdown-toggle <% } %>" href="<%= menu.url %>" <% if(menu.sublime.length > 0){ %> role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" <% } %> ><%= menu.name %></a>

                                        <% if(menu.sublime.length > 0){ %>
                                        <ul class="dropdown-menu">
                                            <li><a href="<%= menu.url %>"><%= menu.name %></a></li>
                                            <% menu.sublime.forEach(function(submenu){  %>
                                            <li><a href="<%= submenu.url %>"><%= submenu.name %></a></li>
                                            <% }) %>
                                        </ul>
                                        <% } %>
                                    </li>

                                    
                                <% }) %>
                            </ul>
                        </div>
                    </nav>


                </div>
            </div>
        </div>
    </div>
</header>