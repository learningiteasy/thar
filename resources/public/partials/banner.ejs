<section class="banner p-0 pos-r fullscreen-banner">
    <div class="banner-slider owl-carousel no-pb" data-dots="false" data-nav="true">
        <div class="item vg">
            <div class="overlay"></div>
            <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                <source src="/uploads/<%= Appearance.video_url %>" type="video/mp4" />
            </video>
            <div class="align-center p-10">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-7 col-md-12">
                            <div class="dark-bg_t p-5 xs-px-2 xs-py-2">
                                <h5 class="text-white mb-3 letter-space-3 animated6"><%= Appearance.banner_caption_1 %></h5>
                                <h1 class="text-white mb-3 animated8"><%= Appearance.banner_caption_2 %> <span><%= Appearance.banner_caption_3 %> </span></h1>
                                <p class="lead text-white animated5 mb-3"><%= Appearance.banner_caption_4 %></p>
                                <div class="social-icons social-colored mt-3">
                                    <ul class="list-inline mb-0">
                                        <li class="social-facebook"><img src="/static/theme/public/images/icons/halal.png" /></li>
                                        <li class="social-twitter"><img src="/static/theme/public/images/icons/kosher.png" /></li>
                                        <li class="social-gplus"><img src="/static/theme/public/images/icons/usda.png" /></li>
                                        <li class="social-gplus"><img src="/static/theme/public/images/icons/nsf.png" /></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="page-content">
    <div class="top-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-4">
                    <div class="topbar-link text-left">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a href="mailto:<%= Appearance.email %>"><i class="far fa-envelope-open"></i><%= Appearance.email %></a>
                            </li>
                            <li class="list-inline-item md-mt-1">
                                <a href="tel:<%= Appearance.phone %>"> <i class="fas fa-mobile-alt"></i><%= Appearance.phone %></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4 text-right">
                    <div class="social-icons social-hover top-social-list">
                        <ul class="list-inline">
                            <li class="social-facebook">
                                <a target="new" href="<%= Appearance.facebook %>"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li class="social-gplus">
                                <a target="new" href="<%= Appearance.instagram %>"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li class="social-gplus">
                                <a target="new" href="<%= Appearance.youtube %>"><i class="fab fa-youtube"></i></a>
                            </li>
                            <li class="social-linkedin">
                                <a target="new" href="<%= Appearance.linkedin %>"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>