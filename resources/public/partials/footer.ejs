<footer class="footer dark-bg sm-pt-8 pos-r" style="background-size: contain; background-repeat: no-repeat;">
    <div class="primary-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <h5><span class="text-theme"><%= Appearance.about_heading %></span></h5>
                    <p class="mb-3"><%= Appearance.short_description %>
                    </p>
                    <a class="btn-simple" href="/about">
                        <span>Read More <i class="ml-2 fas fa-long-arrow-alt-right"></i></span>
                    </a>
                    <div class="social-icons social-colored mt-3">
                        <ul class="list-inline mb-0">

                        <% if(Appearance.facebook != '') { %>
                            <li class="social-facebook">
                                <a href="<%= Appearance.facebook %>"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                            </li>
                        <% } %>

                        <% if(Appearance.instagram != '') { %>
                            <li class="social-instagram">
                                <a href="<%= Appearance.instagram %>"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                            </li>
                         <% } %>

                         <% if(Appearance.linkedin != '') { %>
                            <li class="social-linkedin">
                                <a href="<%= Appearance.linkedin %>"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                            </li>
                        <% } %>

                        <% if(Appearance.youtube != '') { %>
                            <li class="social-youtube">
                                <a href="<%= Appearance.youtube %>"><i class="fab fa-youtube" aria-hidden="true"></i></a>
                            </li>
                         <% } %>

                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 sm-mt-5 footer-list">
                    <h5><span class="text-theme"> <%= Appearance.solution_heading %></span></h5>
                    <ul class="list-unstyled">
                    <% if(Appearance.solution_1 != '') { %>
                        <li>
                            <a href="<%= Appearance.solution_1_url %>"><i class="fas fa-angle-right"></i> <%= Appearance.solution_1 %></a>
                        </li>
                    <% } %>

                    <% if(Appearance.solution_2 != '') { %>
                        <li>
                            <a href="<%= Appearance.solution_2_url %>"><i class="fas fa-angle-right"></i>  <%= Appearance.solution_2 %></a>
                        </li>
                     <% } %>

                     <% if(Appearance.solution_3 != '') { %>
                        <li>
                            <a href="<%= Appearance.solution_3_url %>"><i class="fas fa-angle-right"></i>  <%= Appearance.solution_3 %></a>
                        </li>
                    <% } %>

                    <% if(Appearance.solution_4 != '') { %>
                        <li>
                            <a href="<%= Appearance.solution_4_url %>"><i class="fas fa-angle-right"></i>  <%= Appearance.solution_4 %></a>
                        </li>
                    <% } %>

                    <% if(Appearance.solution_5 != '') { %>
                        <li>
                            <a href="<%= Appearance.solution_5_url %>"><i class="fas fa-angle-right"></i>  <%= Appearance.solution_5 %></a>
                        </li>
                    <% } %>

                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 md-mt-5 widget">
                    <h5>Downloadables</h5>
                    <div class="recent-post mb-0">
                        <ul class="list-unstyled">

                            <% Downloadables.forEach(function(resource){ %>
                                <li class="mb-3">
                                    <div class="recent-post-desc">
                                        <a href="/resources"><%= resource.title %></a>
                                        <span><%= resource.created_at %></span>
                                    </div>
                                </li>
                            <%  }); %>
                            
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 md-mt-5">
                    <h5>Contact us</h5>
                    <ul class="contact-info list-unstyled mt-4">
                        <li class="mb-4"><i class="flaticon-phone-call"></i><span>Phone:</span><a href="tel:<%= Appearance.phone %>"><%= Appearance.phone %></a></li>
                        <li class="mb-4">
                            <i class="flaticon-paper-plane"></i><span>Address:</span>
                            <p>
                                <%= Appearance.address %>
                            </p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="secondary-footer">
        <div class="container">
            <div class="copyright">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <span>Copyright 2021 Tharprocess All Rights Reserved</span>
                    </div>
                    <div class="col-md-5 text-md-right sm-mt-3 footer-list">
                        <ul class="list-inline">
                            <li><a href="/terms-and-conditions">Terms & Condition</a></li>
                            <li><a href="/privacy-policy">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>